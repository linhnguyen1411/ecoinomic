<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-pic js-tilt" data-tilt>
        <%= image_tag "img-01.png", alt: "IMG" %>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
        html: {id: "js-forgot-form", class: "login100-form"}) do |f| %>

        <span class="login100-form-title">
          Admin forgot passwowrd
        </span>

        <div class="wrap-input100">
          <%= f.email_field :email, class: "input100", placeholder: "Email" %>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
          </span>
        </div>

        <div class="container-login100-form-btn">
          <button class="login100-form-btn btn-block" type="submit">
            Send me reset mail
          </button>
        </div>

        <div class="text-center p-t-12">
          <span class="txt1">
            If you have account
          </span>
          <a class="txt2" href="<%= new_admin_session_path %>">
            Login
          </a>
        </div>

        <div class="text-center p-t-136">
          <a class="txt2" href="#">
            Contact with admin to create account
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
