<div class="app-content content">
  <div class="content-wrapper">
    <div class="content-header row">
    </div>
    <div class="content-body">
      <section id="account-login" class="flexbox-container">
        <div class="col-12 d-flex align-items-center justify-content-center">
          <!-- image -->
          <div class="col-xl-3 col-lg-4 col-md-5 col-sm-5 col-12 p-0 text-center d-none d-md-block">
            <div class="border-grey border-lighten-3 m-0 box-shadow-0 card-account-left height-400">
              <%= image_tag "user/account-login.png", class: "card-account-img width-200" %>
            </div>
          </div>
          <!-- login form -->
          <div class="col-xl-3 col-lg-4 col-md-5 col-sm-5 col-12 p-0">
            <div class="card border-grey border-lighten-3 m-0 box-shadow-0 card-account-right height-400">
              <div class="card-content">
                <div class="card-body p-3">
                  <p class="text-center h5 text-capitalize">Welcome to Crypto ICO!</p>
                  <p class="mb-3 text-center">Forgot your password?</p>
                  <div id="js-render">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                      html: {method: :post, class: "form-horizontal", id: "js-form-forgot"}) do |f| %>
                      <fieldset class="form-label-group">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          placeholder: "Your Username", class: "form-control" %>
                        <%= f.label :email %>
                      </fieldset>
                      <%= f.submit "Send reset mail", class: "btn-gradient-primary btn-block my-1" %>
                      <p class="text-center"><%= link_to "Sign in", login_path, class: "card-link" %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
