<div class="flex header-bar">
  <h3 class="title">Verify</h3>
  <a href="#"><i class="material-icons">help</i></a>
</div>
<hr class="mt15">
<h4 class="mb0"><span class="fw400">To verify your account, you must fill exactly all your information to this form below: </span></h4>
<div class="card mt15">
  <div class="card-content">
    <form class="form-horizontal" action="/action_page.php">
      <div class="form-group">
        <label class="control-label col-sm-2" for="firstName">Your Firstname</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="firstName" placeholder="Enter your first name" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="lastName">Your Lastname</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="lastName" placeholder="Enter your last name" required >
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="country">Country</label>
        <div class="col-sm-8">
          <select class="form-control" id="country" required >
            <%= Country.all.each do |c| %>
              <option><%= c.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="city">City</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="city" placeholder="Enter your City" required >
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Password:</label>
        <div class="col-sm-8">
          <input type="password" class="form-control" id="pwd" placeholder="Enter password">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="pwd-confirm">Password Comfirmation:</label>
        <div class="col-sm-8">
          <input type="password" class="form-control" id="pwd-confirm" placeholder="Enter password confirmation">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
