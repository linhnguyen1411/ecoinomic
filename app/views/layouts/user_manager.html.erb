<!DOCTYPE html>
<html>
  <head>
    <title>Ecoinomic</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'user_manager', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'user_manager', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="col-4 pt-1">
            <a class="blog-header-logo" href="#">Ecoinomic</a>
          </div>
          <div class="col-4 d-flex justify-content-end align-items-center">
            <% if current_user %>
              <%= link_to "Log out", destroy_user_session_path, class: "btn btn-sm btn-outline-secondary", method: :delete,
                data: {confirm: "Are you sure?"} %>
            <% else %>
              <%= link_to "Log in", new_user_session_path, class: "btn btn-sm btn-primary" %>
            <% end %>
          </div>
        </div>
      </header>
      <div class="jumbotron p-3 p-md-5">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
